<div class="container mt-3">
  <h1>Add Review</h1>
  <%# reviews_path %>
  <%# restaurant_reviews_path %>
  <%# <%= simple_form_for @review do |f| %>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="star-rating">
    <% 5.times do |i| %>
    <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %> />
    <% end %>
  </div>
    <%= f.input :content %>
    <%= f.submit class: 'btn btn-warning mt-2' %>
  <% end %>
  <%= link_to "Back to restaurant", restaurant_path(@restaurant), class: 'btn btn-primary mt-2' %>
</div>
